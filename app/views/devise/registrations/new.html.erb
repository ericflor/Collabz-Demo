<div class="container" id="sign-up-form">
  <h1>Get in touch with like-minded people</h1>
    <h3>Create, study, accomplish goals together</h3>
    <br>
    <div class="row justify-content-md-center">
      <div class="col-sm-6">
        <h3>Sign up <small>it's free!</small></h3> 
        <br>
          <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <%= f.text_field :name, 
                          placeholder: 'Username', 
                          class: 'form-control' %>
          <%= f.text_field :email, 
                          placeholder: 'Email', 
                          class: 'form-control' %>
          <%= f.password_field :password, 
                                placeholder: 'Password', 
                                class: 'form-control' %>
          <%= f.password_field :password_confirmation, 
                                placeholder: 'Password Confirmation', 
                                class: 'form-control' %>
                                <br>
          <%= f.submit 'Sign up', class: 'btn sign-up-button btn-lg btn-success' %>
        <% end %>
      
      </div>
    </div>
</div>